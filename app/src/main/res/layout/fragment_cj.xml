<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tel_title"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/text_green">

        <ImageView
            android:id="@+id/cj_fanhui"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:id="@+id/tel_linear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="数据采集"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/fjbh"
        android:textColor="@android:color/black"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/cj_edit"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:background="@drawable/register_corners"
        android:hint="例如: 1A01"
        android:padding="3dp"/>

    <!--<ImageView-->
        <!--android:id="@+id/cj_cj"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:src="@mipmap/ic_launcher"/>-->

    <ImageView
        android:id="@+id/cj_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/tj"/>
</LinearLayout>